<?xml version="1.0" encoding="utf-8"?>
<!-- 水平虚线 -->
<!-- 要实现虚线效果，需要配合设置View的属性android:layerType="software",否则是一条直线 -->
<!-- 如要竖直虚线甚至是斜的虚线，可以使用自定义DashedView -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line">
    <stroke
        android:width="1dp"
        android:color="@color/cool_grey"
        android:dashGap="3dp"
        android:dashWidth="5dp" />
</shape>