<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item><!-- 标题栏背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- 状态栏背景色 -->
        <item name="colorAccent">@color/colorAccent</item><!-- 控件选中颜色 -->
        <!-- 避免按钮上显示的英文字母强制转大写 -->
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 主页底部仿Tab栏的RadioButton样式 -->
    <style name="home_radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/checker_home_radio_text</item>
    </style>

    <style name="tv_hyperlink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!--  -->
    <style name="xx">
        <item name="android:background">@color/white</item>
    </style>

    <!--  -->

    <!--  -->

    <!--  -->

</resources>
